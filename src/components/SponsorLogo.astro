---
// Import all the sponsor components
import Alsa from "@/icons/sponsors/Alsa.astro"
import Cerave from "@/icons/sponsors/Cerave.astro"
import CocaCola from "@/icons/sponsors/CocaCola.astro"
import ElPozo from "@/icons/sponsors/ElPozo.astro"
import GShock from "@/icons/sponsors/GShock.astro"
import Grefusa from "@/icons/sponsors/Grefusa.astro"
import Infojobs from "@/icons/sponsors/Infojobs.astro"
import Mahou from "@/icons/sponsors/Mahou.astro"
import Maxibon from "@/icons/sponsors/Maxibon.astro"
import Nothing from "@/icons/sponsors/Nothing.astro"
import Prime from "@/icons/sponsors/Prime.astro"
import PrimeH from "@/icons/sponsors/PrimeH.astro"
import Revolut from "@/icons/sponsors/Revolut.astro"
import Spotify from "@/icons/sponsors/Spotify.astro"
import Vicio from "@/icons/sponsors/Vicio.astro"

interface Props {
	id: string
	name: string
	width: number
	height: number
	class?: string
}

const { id, width, height, class: className = "" } = Astro.props

// Define a type for the sponsor components
type SponsorComponentType = typeof Alsa
type SponsorMapping = Record<string, SponsorComponentType>

// Map of id to component
const sponsors: SponsorMapping = {
	"alsa": Alsa,
	"cerave": Cerave,
	"el-pozo": ElPozo,
	"g-shock": GShock,
	"nothing": Nothing,
	"grefusa": Grefusa,
	"infojobs": Infojobs,
	"mahou": Mahou,
	"maxibon": Maxibon,
	"prime-h": PrimeH,
	"prime": Prime,
	"revolut": Revolut,
	"spotify": Spotify,
	"coca-cola": CocaCola,
	"vicio": Vicio,
}

// Get the correct sponsor component
const SponsorComponent = sponsors[id]
---

<SponsorComponent width={width} height={height} class:list={`text-brown ${className}`} />
